</head>
<body>

    <%- include("../includes/navbar.ejs") %>
    <div class="container">
        <%- include("../includes/flash.ejs") %>
        <%- body %>
    </div>

    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Search</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/listings/search" method="GET">
          <div class="mb-3">
            <label for="mobile-location" class="form-label">Location</label>
            <input type="text" class="form-control" id="mobile-location" name="location" placeholder="Search destinations">
          </div>

          <div class="row">
            <div class="col-6 mb-3">
              <label for="mobile-dates" class="form-label">Dates</label>
              <input type="text" class="form-control" id="mobile-dates" name="dates" placeholder="Add dates">
            </div>
            <div class="col-6 mb-3">
              <label for="mobile-guests" class="form-label">Guests</label>
              <input type="text" class="form-control" id="mobile-guests" name="guests" placeholder="Add guests" readonly>
            </div>
          </div>
          
          <div id="mobile-guest-options" class="mobile-guest-options">
             </div>

          <button type="submit" class="btn btn-danger w-100 mt-3">Search</button>
        </form>
      </div>
    </div>
  </div>
</div>


    <%- include("../includes/footer.ejs") %>

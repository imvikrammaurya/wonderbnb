<% layout('layouts/boilerplate.ejs') -%>
<body>
  <div class="row mt-3">
    <div class="col-12 col-lg-8 offset-lg-2">
      <h3><%= listing.title %></h3>

      <div class="card mt-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
        <div class="card-body">
          <p class="card-text">
            <i>Property Is Owned by: <%= listing.owner.username %></i>
          </p>
          <p><%= listing.description %></p>

          <% if (listing.averageRating > 0) { %>
  <%
    let ratingClass = "";
    if (listing.averageRating < 2) ratingClass = "rating-red";
    else if (listing.averageRating <= 3.5) ratingClass = "rating-yellow";
    else if (listing.averageRating <= 4.7) ratingClass = "rating-green";
    else ratingClass = "rating-dark-green";
  %>
  <div class="show-rating">
    <div class="rating-score <%= ratingClass %>">
      <b><i class="fa-solid fa-star"></i> <%= listing.averageRating.toFixed(1) %></b>
    </div>
    <div class="rating-count">
      <%= listing.reviews.length %> Rating<%= listing.reviews.length > 1 ? 's' : '' %>
    </div>
  </div>
<% } %>

          <% if (listing.category && listing.category.length > 0) { %>
            <h5>Categories</h5>
            <p>
              <% for(let category of listing.category) { %>
                <a href="/listings?category=<%= category %>" class="category-link badge rounded-pill text-bg-secondary me-2">
                  <%= category %>
                </a>
              <% } %>
            </p>
          <% } %>

          <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
          <p><%= listing.location %></p>
          <p><%= listing.country %></p>
        </div>
      </div>

      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger edit-btn me-2">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

      <div class="mt-3 mb-3"><br><hr>
        <% if(currUser) {%>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">Please Add Some Comment For Review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
          </form>
        <% } %>
      </div>

      <div class="row mt-4">
        <h5><b>All Reviews</b></h5>
        <% for(review of listing.reviews) { %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.comment %></p>
              </div>
              <% if(currUser && review.author._id.equals(currUser._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3 ms-3" method="POST">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
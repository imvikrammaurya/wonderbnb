<% layout('layouts/boilerplate.ejs') -%>
<body> 
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create A New Listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Enter title for your property</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Description" class="form-control" required></textarea>
            <div class="invalid-feedback">Write something about your property</div>
        </div>

        <div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select name="listing[category]" id="category" class="form-select" required>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Iconic Cities">Iconic Cities</option>
    <option value="Mountains">Mountains</option>
    <option value="Castles">Castles</option>
    <option value="Amazing Pools">Amazing Pools</option>
    <option value="Arctic">Arctic</option>
    <option value="Camping">Camping</option>
    <option value="Dome">Dome</option>
    <option value="Boats">Boats</option>
    <option value="Farms">Farms</option>
  </select>
</div>
        
        <div class="mb-3">
            <label for="imageUrl" class="form-label">Upload Image</label>
            <input name="listing[image][url]" type="file" class="form-control" >
        </div>
        <div class="mb-3">
            <label for="imageFilename" class="form-label">Image Alt Text</label>
            <input name="listing[image][filename]" type="text" class="form-control" >
            required
        </div>

        <div class="row">

        <div class="mb-3 col-md-4"> 
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Please enter Price" type="number" class="form-control" > 
            <div class="invalid-feedback">Please enter a valid amount</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a location</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a country</div>
        </div>
        
        



        <button type="submit" class="btn btn-dark mt-2 add-btn">Add</button>
        
    </form>
    </div>
    </div>
</body>

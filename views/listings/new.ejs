<% layout('layouts/boilerplate.ejs') -%>
<body> 
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create A New Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="Please enter image URL" type="text" class="form-control">
        </div>

        <div class="row">

        <div class="mb-3 col-md-4"> 
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Please enter Price" type="number" class="form-control">
        </div>

        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control">
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control">
        </div>
        
        



        <button type="submit" class="btn btn-dark mt-2 add-btn">Add</button>
        
    </form>
    </div>
    </div>
</body>
